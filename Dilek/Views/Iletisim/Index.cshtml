@model Services.Results.ContactResult
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "İletişim - Dilek Fanila";
}

<div class="col-lg-12">
    <hr>
    <h2 class="intro-text text-center">
        <strong>İLETİŞİM</strong>
    </h2>
    <hr>
</div>
@{ string location = Model.Contents.Where(p => p.DBCode == 12).FirstOrDefault().Text;}
<div class="col-md-8">
    <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="@location"></iframe>
</div>
<div class="col-md-4">
    @foreach (var item in Model.Contents.Where(q=>q.DBCode==7))
    {
        <p>
            @item.Title:
            <strong>@item.Text</strong>
        </p>
    }
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            <strong>BİZE ULAŞIN</strong>
        </h2>
        <hr>
        @foreach (var item in Model.Contents.Where(q => q.DBCode == 11))
        {
            <div class="form-group col-lg-12">
                <h4>@item.Title</h4>
                <p>@item.Text</p>
            </div>
        }
        <form role="form" action="@Url.Action("SendUs", "Iletisim")" method="post">
            <div class="row">
                <div class="form-group col-lg-4">
                    <label>İsim Soyisim</label>
                    <input type="text" class="form-control" id="Name" name="Name">
                </div>
                <div class="form-group col-lg-4">
                    <label>eMail Adresi</label>
                    <input type="email" class="form-control" placeholder="kisi@abc.com" id="Mail" name="Mail">
                </div>
                <div class="form-group col-lg-4">
                    <label>Telefon Numarası</label>
                    <input type='tel' pattern="[0][0-9]{10}" class="form-control" id="Phone" name="Phone" placeholder="05123456789" maxlength="11">
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-12">
                    <label>Mesajınız</label>
                    <textarea class="form-control" rows="6" placeholder="Mesajınızı buraya yazabilirsiniz." id="Text" name="Text"></textarea>
                </div>
                <div class="form-group col-lg-12">
                    <input type="hidden" name="save" value="contact">
                    <button type="submit" class="btn btn-default">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>