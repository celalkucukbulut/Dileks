@model int
@{
    ViewBag.Title = "Şifre Yenile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pen-title">
    <h2>Şifre Yenileme</h2>
</div>
<div class="module form-module">
    <div>

    </div>
    <div class="form">
        <h6>Şifrenizi değiştiriniz.</h6>
        <form action="@Url.Action("UpdatePassword", "Giriş", new { Area = "Admin" })" method="post">
            <input type="hidden" name="ID" id="ID" value="@Model"/>
            <input type="password" placeholder="Yeni Şifre" name="password" id="password" required />
            <input type="password" placeholder="Yeni Şifre(Tekrar)" name="confirm_password" id="confirm_password" required />
            <input class="btn-info" type="submit" value="Yenile"/>
        </form>
    </div>
</div>
<script>
    var password = document.getElementById("password")
      , confirm_password = document.getElementById("confirm_password");

    function validatePassword() {
        debugger;
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Lütfen Aynı Şifreyi Giriniz");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>